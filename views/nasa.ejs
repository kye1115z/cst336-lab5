<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/menu.ejs") %>
    <main class="planet_main">
      <div
        class="nasa_bg"
        style="background-image: url('<%= todayData.url %>')"
      >
        <p class="nasa_info">The background is today's NASA POD.</p>
        <form action="/nasa" method="GET" class="date_container">
          <h1>NASA</h1>
          <div class="date_selector">
            <div class="select_container">
              <label for="month">Month</label>
              <select id="month" name="month" required>
                <option value="">Select Month</option>
                <option value="01">Jan</option>
                <option value="02">Feb</option>
                <option value="03">Mar</option>
                <option value="04">Apr</option>
                <option value="05">May</option>
                <option value="06">Jun</option>
                <option value="07">Jul</option>
                <option value="08">Aug</option>
                <option value="09">Sep</option>
                <option value="10">Oct</option>
                <option value="11">Nov</option>
                <option value="12">Dec</option>
              </select>
            </div>
            <div class="input_container">
              <label for="day">Day</label>
              <input
                id="day"
                name="day"
                type="number"
                min="1"
                max="31"
                required
              />
            </div>
            <div class="input_container">
              <label for="year">Year</label>
              <input
                id="year"
                name="year"
                type="number"
                min="1900"
                max="2100"
                required
              />
            </div>
          </div>
          <button type="submit" id="displayButton">Display Media</button>
        </form>
        <% if (nasaData) { %> <% if (nasaData.code === 400) { %>
        <p class="nasa_alert"><%= nasaData.msg %></p>
        <% } else { %>
        <div class="nasa_output">
          <h2><%= nasaData.title %></h2>
          <p><%= nasaData.explanation %></p>
          <img src="<%= nasaData.url %>" alt="NASA Picture" />
        </div>
        <% } %> <% } %>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
  </body>
</html>
